{
    "python.formatting.provider": "black",
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
    "python.linting.pydocstyleArgs": [
        "--ignore=D100,D101,D102,D106,"  // missing docstrings
    ],
    "python.linting.flake8Args": [
        "--max-line-length=120",
        "--ignore=D203,W503",
    ],
    "cSpell.words": [
        "asyncio",
        "bcrypt",
        "catched",
        "chdir",
        "conftest",
        "datetime",
        "fastdeploy",
        "frontends",
        "httpx",
        "jochen",
        "loadbalancer",
        "pinia",
        "Popen",
        "pydantic",
        "pyright",
        "rprint",
        "traefik",
        "typer",
        "uuidv",
        "uvicorn",
        "venv",
        "virtualenv",
        "vite",
        "vitejs",
        "wersdoerfer"
    ]
}
